<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="AaltoWindraw.BeforeGuessingPanel"
	x:Name="UserControl">

	<Grid x:Name="LayoutRoot" Background="White" HorizontalAlignment="Left">
		
		<StackPanel>
			<TextBlock Style="{DynamicResource TextBlock-Title}" Text="Rules"></TextBlock>
			<TextBlock Style="{DynamicResource TextBlock-SubTitle}" TextWrapping="WrapWithOverflow" Text="You will have to guess as fast as possible what will be magically drawn under your eyes" TextAlignment="Justify"></TextBlock>
			
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Style="{DynamicResource TextBlock-Title}" Text="Are you ready?" VerticalAlignment="Center"></TextBlock>
				<Button x:Name="ButtonGo" Style="{DynamicResource YellowButton}" FontSize="{DynamicResource FontSize-Title}" Width="200" Content="Go !" Margin="30" Click="OnClickGo" VerticalAlignment="Center"></Button>
			</StackPanel>
			<TextBlock x:Name="FinalCountdown" Style="{DynamicResource TextBlock-Title}" FontSize="200" Text="3" HorizontalAlignment="Center"></TextBlock>
		</StackPanel>
		
	</Grid>
</UserControl>