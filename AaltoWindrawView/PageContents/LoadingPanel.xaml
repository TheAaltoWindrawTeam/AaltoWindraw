<UserControl
    x:Class="AaltoWindraw.LoadingPanel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	x:Name="LoadingPageUsrCtrl"
    Loaded="UserControl_Loaded"
	xmlns:local="clr-namespace:AaltoWindraw"
	Width="Auto" Height="Auto">

    <!-- Contenu -->
	<Grid x:Name="LayoutRoot" Background="White">
		<StackPanel Orientation="Vertical" HorizontalAlignment="Center" >
			 <local:CircularProgressBar Height="200" Width="200" HorizontalAlignment="Center"></local:CircularProgressBar>
			<TextBlock x:Name="LoadingInformation" Style="{StaticResource TextBlock-Default}" Margin="0,50,0,0" HorizontalAlignment="Center" ><Run Language="fr-fr" Text="Please wait"/></TextBlock>
	       
    	</StackPanel>
	</Grid>
</UserControl>