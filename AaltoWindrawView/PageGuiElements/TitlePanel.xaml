<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="AaltoWindraw.TitlePanel"
	x:Name="Page"
	FlowDirection="LeftToRight"
	Width="Auto" Height="Auto">

	<Grid x:Name="LayoutRoot" Background="White">
		<Viewbox HorizontalAlignment="Left">
				<StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">	
					<TextBlock x:Name="Title" Style="{StaticResource TextBlock-Title}" Text="Title" VerticalAlignment="Center"/>
					<TextBlock x:Name="SubTitle" Style="{StaticResource TextBlock-Title}" Text="SubTitle" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="{StaticResource FontColor-Default}"/>
				</StackPanel>
			</Viewbox>
	</Grid>
</UserControl>