<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:AaltoWindraw"
	x:Class="AaltoWindraw.BasicPage"
	x:Name="Page"
	FlowDirection="LeftToRight"
	Width="1366" Height="768">

	<Grid x:Name="LayoutRoot" Background="White">
		<Grid.RowDefinitions>
			<RowDefinition Height="0.1*"/>
			<RowDefinition Height="0.9*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.209*"/>
			<ColumnDefinition Width="0.791*"/>
		</Grid.ColumnDefinitions>
		<local:NavigationPanel x:Name="PageNavigation" Grid.Column="0" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left"></local:NavigationPanel>
		
		<local:TitlePanel x:Name="PageTitle" Grid.Column="1" Grid.Row="0"></local:TitlePanel>
       
	   <ContentControl x:Name="PageContent" Grid.Column="1" Grid.Row="1" Margin="20"/>
		
	</Grid>
</UserControl>