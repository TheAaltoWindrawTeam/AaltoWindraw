<s:SurfaceWindow x:Class="AaltoWindraw.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="AaltoWindrawApplication"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    xmlns:local="clr-namespace:AaltoWindraw"
    Background="White">
    
    <Grid x:Name="MainWindowGrid" Background="White" >
        <!-- Keep empty and use methods to fill with Pages-->
        <local:PageTransition x:Name="pageTransitionControl" Margin="0" TransitionType="SlideAndFade" />
    </Grid>
</s:SurfaceWindow>
